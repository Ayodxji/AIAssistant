FROM maven:3.9.5-eclipse-temurin-17 AS build

WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline


COPY src ./src
RUN mvn clean package -DskipTests

FROM eclipse-temurin:17-jdk-jammy


WORKDIR /app


COPY --from=build /app/target/AIAssistant-0.0.1-SNAPSHOT.jar .


EXPOSE 8080


ENTRYPOINT ["java", "-jar", "/app/AIAssistant-0.0.1-SNAPSHOT.jar"]

